    <div class="content-container">
        
        <div class="single-recipe-container">
          

            <div class="recipe-page">
                <section class="recipe-hero">
                    <img src= "/<%= recipe.image %>" class="img recipe-hero-img" alt="image" >
                    <div class="recipe-info">
                        <h2><%= recipe.name %></h2>
                        
                        <div class="recipe-icons">
                            <div class="recipe-details-1">
                                <div>
                                    <h4>calories</h4>
                                    <p><%= recipe.calories %></p>
                                </div>
                                <div>
                                    <h4>Cuisine</h4>
                                    <p>Local</p>
                                </div>
                                <div>
                                    <h4>Meal Type</h4>
                                    <p>Anytime Dish</p>
                                </div>
                            </div>
<!--                             
                            <div>
                                <input type="hidden" value="<%= recipe._id %>" />
                                
                                <i class="fa-regular fa-bookmark save-recipe-icon" id="saveRecipeIcon" data-edamam-uri="${recipe.uri}"></i>
                                
                                <h5>Add to Favourites</h5>
                                
                            </div> -->
                            <div>
                                    <button id="shareRecipe">
                                    <i class="fa-solid fa-share-from-square"></i>
                                </button>
                                <h5>share</h5>
                                <p id="copyStatus"> </p>
                            </div>
                    
                            <div>
                                <i class="far fa-clock"></i>
                                <h5>time</h5>
                                <p>60</p>
                            </div>
                            
                        </div>
                    
                    </div>
                </section>

                <section class="recipe-content">
                    <div class="instructions-container">
                        <h4>Instructions</h4>   
                        <% recipe.instructions.forEach((instruction, index) => { %>
                            <div class="single-instruction">
                                <div class="steps">
                                    <p>Step <%= index + 1 %></p>
                                </div>
                                <p><%= instruction %></p>
                            </div>
                        <% }); %>        

                        
                    </div>
                    <div class="ingredients-container">
                       
                            <div>
                                <h4>Ingredients</h4>
                                <% recipe.ingredients.forEach((ingredient, index) => { %>
                                    <p class="single-ingredient"><%= ingredient %></p>
                                    <% }); %> 
                            </div>
                        
                       

                    </div>
                </section>
                <section class="recipe-details-2">
                    <!-- <h4>Total Nutrients</h4>

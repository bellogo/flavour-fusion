        <form action="" class="contact-form-container">
            <h2 class="content-title">Submit A Query, We'll get back to you.</h2>
            <div class="contact-details">
                <input type="text" name="name" id="name" placeholder="full name" required>
                <input type="email" name="email" id="email" placeholder="email" required>
                <textarea style="resize:none" name="query" id="query" cols="30" rows="10" placeholder="message"></textarea>
                <a href=""><button class="btn" id="contact-button" type="submit">submit</button></a>
            </div>
        </form>
